datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Lottie {
    id          Int     @id @default(autoincrement())
    title       String
    description String?
    assetUrl    String
    user        User    @relation(fields: [userId], references: [id])
    userId      Int
    downloads   Int     @default(0)
    likes       Int     @default(0)
}

model User {
    id      Int      @id @default(autoincrement())
    name    String
    avatar  String?
    lotties Lottie[]
}
